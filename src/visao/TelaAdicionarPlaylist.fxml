<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="200.0" prefWidth="350.0" spacing="30.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controle.TelaAdicionarPlaylistController">
    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>
    
    <TextField fx:id="nomePlaylist" maxWidth="-Infinity" prefHeight="40.0" prefWidth="260.0" promptText="Nome da Playlist">
      <font>
         <Font size="13.0" />
      </font></TextField>
    <Button maxHeight="100.0" onAction="#adicionarPlaylistAcao" text="Criar ">
      <font>
         <Font size="13.0" />
      </font></Button>
</VBox>
